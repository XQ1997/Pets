$(function(){

	$(".j-hezuo-form").Validform({
		ajaxPost:true,
		tiptype:function(msg,o,cssctl,s){
			if(o.type == 3){
				layer.msg(msg,{
					time: 1000
				})
			}
		},
		callback:function(data){
			if(data.state != 'success') {
				layer.msg(data.message,{
					time: 1000
				})
			} else {
				layer.msg('申请成功',{
					time: 1000
				});
				setTimeout(function(){
					window.location.reload();//刷新当前页面.
				},2000)
			}
		}
	})

	$(".j-hehuo-form").Validform({
		ajaxPost:true,
		tiptype:function(msg,o,cssctl,s){
			if(o.type == 3){
				layer.msg(msg,{
					time: 1000
				})
			}
		},
		beforeCheck:function(curform){
			//在表单提交执行验证之前执行的函数，curform参数是当前表单对象。
			//这里明确return false的话将不会继续执行验证操作;
			//console.log(curform);
			//var type = $("input[type='checkbox']:checked").attr('value');
			var type = $("input[type='checkbox']").is(':checked')
			//console.log(type);
			if(!type) {
				layer.msg('请选择技术类型',{
					time: 1000
				});
				return false;
			}
		},
		callback:function(data){
			if(data.state != 'success') {
				layer.msg(data.message,{
					time: 1000
				})
			} else {
				layer.msg('申请成功',{
					time: 1000
				});
				setTimeout(function(){
					window.location.reload();//刷新当前页面.
				},2000)
			}
		}
	})
});